<!DOCTYPE html>
<html>
	<head>

		<title>MRDWC Live</title>

		<script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
		<script>
		if (!window.jQuery) {
		document.write('<script src="http://mrdwc.com/jquery-1.10.1.min.js"><\/script>');
		}
		</script>

		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
		<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>

		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<script src='/mrdwc.js'></script>

		<style>
			body {
				background-image: url('http://mrdwc.com/wp-content/uploads/2013/12/Try11.jpg');

				background: url(http://mrdwc.com/wp-content/uploads/2013/12/Try11.jpg) no-repeat center center fixed;
				-webkit-background-size: cover;
				-moz-background-size: cover;
				-o-background-size: cover;
				background-size: cover;

				font-size: 20px;

			}

			.table tr, .table th {
				text-align: center;
			}

			.table {
				margin-bottom: 0px;
			}

			h3 {
				margin-top: 0px;
			}

			.panel-body {
				-webkit-border-radius: 5px;
				-moz-border-radius: 5px;
				border-radius: 5px;
			}

			.panel-Red {
				background-color: rgba(255, 0, 0, 0.2);
				border: 2px solid red;
			}

			.panel-Orange {
				background-color: rgba(255, 127, 36, 0.2);
				border: 2px solid orange;
			}

			.panel-Green {
				background-color: rgba(0, 255, 0, 0.2);
				border: 2px solid green;
			}

			.panel-Blue {
				background-color: rgba(0, 0, 255, 0.2);
				border: 2px solid blue;
			}

			.group-wrap {
				padding: 20px 50px
			}
		</style>

	</head>

	<body>
		<div class="row">
			<% for(var group_id = 0; group_id < groups.length; group_id++) { %>
			<div class="col-lg-6 group_<%=groups[group_id].name%>">

				<div class = "group-wrap" />

					<div class="panel panel-default">
						<div class="panel-body panel-<%=groups[group_id].name%>">
							<h3><%=groups[group_id].name%> Group</h3>
							<table class="table" id="<%=groups[group_id].name%>_table">
								<tr>
									<th>Team</th>
									<th>Played</th>
									<th>Won</th>
									<th>Score Dif</th>
								</tr>
								<% for(var team_id = 0; team_id < groups[group_id].teams.length; team_id++) { %>

								<tr class="<%=groups[group_id].teams[team_id].name%>">
									<td class="group_team_name"><%=groups[group_id].teams[team_id].name%></td>
									<td class="group_team_played"><%=groups[group_id].teams[team_id].played%></td>
									<td class="group_team_won"><%=groups[group_id].teams[team_id].won%></td>
									<td class="group_team_dif"><%=groups[group_id].teams[team_id].dif%></td>
								</tr>
								<%}%>

							</table>
						</div>
					</div>
				</div>
			</div>
			<%}%>
		</div>

		<script>
			$(document).ready(function () {
				refresh($.ajax, window, function () {});
			});
		</script>
	</body>
</html>